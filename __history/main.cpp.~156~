//---------------------------------------------------------------------------

void __fastcall TForm2::Kl1Click(TObject *Sender)
{
	LEKlic->Text = "";
}
//---------------------------------------------------------------------------


void __fastcall TForm2::Vygenerovatnhodnkl1Click(TObject *Sender)
{
	LEKlic->Text = "";
	
	char *klic = new char[10];
	char k;
	for(int i = 0;i<10;i++){
		k = rand()%25+65;
		if(k > 'A' && k < 'Z')
			klic[i] = k;
	}
	for(int i = 0;i<10;i++)
		LEKlic->Text = LEKlic->Text + klic[i];
}
